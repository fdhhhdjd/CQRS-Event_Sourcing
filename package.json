  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "repository": "github.com/fdhhhdjd/CQRS-Event_Sourcing",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "format": "prettier --write src/**/*.{js,jsx}",
    "prepare": "husky install",
    "pre-commit": "echo \"[Husky] pre-commit\"",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        130
      ]
    },
    "extends": [
      "./commitlint.config.js"
    ]
  },
  "_moduleAliases": {
    "@": "src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.10.4",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "module-alias": "^2.2.3",
    "mongoose": "^8.4.4",
    "pg": "^8.12.0",
    "sanitize-filename": "^1.6.3",
    "sequelize": "^6.37.3",
    "uuid": "^10.0.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15"
