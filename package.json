  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "morgan": "^1.10.0",
    "prettier": "^1.19.1",
    "prettierrc": "^0.0.0-5"
  }
